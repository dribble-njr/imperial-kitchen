generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

enum CategoryType {
  DISH
  RECIPE
  OTHER
}

model Category {
  id          Int          @id @default(autoincrement())
  name        String
  type        CategoryType
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  isActive    Boolean      @default(true)

  dishes      Dish[]
  @@index([type])
}

model Dish {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  image       String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)

  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?

  tags      TagsOnDishes[]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  phone     String?  @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  kitchens KitchensOnUsers[]
}

model Kitchen {
  id         Int      @id @default(autoincrement())
  name       String
  inviteCode String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  isActive   Boolean  @default(true)

  users KitchensOnUsers[]
}

model KitchensOnUsers {
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  kitchen   Kitchen  @relation(fields: [kitchenId], references: [id])
  kitchenId Int
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  @@id([userId, kitchenId])
}

enum Role {
  ADMIN
  MEMBER
}

enum TagType {
  recipe
  dish
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(10)
  type      TagType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dishes    TagsOnDishes[]

  @@index([name])
  @@index([type])
}

model TagsOnDishes {
  dish      Dish     @relation(fields: [dishId], references: [id])
  dishId    Int
  tag       Tag      @relation(fields: [tagId], references: [id])
  tagId     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([dishId, tagId])
}
